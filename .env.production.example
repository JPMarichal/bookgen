# Configuración de producción para VPS Ubuntu IONOS
# Este archivo debe ser creado en el VPS en /opt/bookgen/.env.production

# Entorno
ENV=production
DEBUG=false

# API Keys
OPENROUTER_API_KEY=your_actual_api_key_here
OPENROUTER_MODEL=qwen/qwen-2.5-72b-instruct

# Configuración del sitio
SITE_URL=https://bookgen.yourdomain.com
SITE_TITLE=BookGen - Generador Automático de Biografías
API_VERSION=v1

# Configuración de la base de datos (SQLite para simplicidad)
DATABASE_URL=sqlite:///./data/bookgen_production.db

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=/app/data/logs/bookgen.log
MAX_LOG_SIZE=50MB
LOG_RETENTION_DAYS=30

# Configuración de seguridad
SECRET_KEY=your_super_secret_key_change_this_in_production
ALLOWED_HOSTS=bookgen.yourdomain.com,localhost,127.0.0.1
CORS_ORIGINS=https://bookgen.yourdomain.com

# Configuración de límites de recursos
MAX_CONCURRENT_GENERATIONS=3
MAX_CHAPTER_LENGTH=15000
MIN_CHAPTER_LENGTH=3000
REQUEST_TIMEOUT=300
MAX_RETRIES=3

# Configuración de almacenamiento
STORAGE_PATH=/app/data
OUTPUT_PATH=/app/docx
SOURCES_PATH=/app/esquemas
COLLECTIONS_PATH=/app/colecciones
TEMPLATES_PATH=/app/wordTemplate

# Configuración de workers
WORKER_POOL_SIZE=2
WORKER_TIMEOUT=600
QUEUE_MAX_SIZE=50

# Configuración de monitoreo
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Configuración de email (opcional para notificaciones)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=notifications@yourdomain.com
SMTP_PASSWORD=your_smtp_password
ADMIN_EMAIL=admin@yourdomain.com

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/opt/bookgen/backups